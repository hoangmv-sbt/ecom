<div class="container">
    <div class="row">
        <div class="container col-md-3 pb-0">
            <%= render "posts/img_category" %>
        </div>
        <div class="container col-md-9 pb-0">
            <%= render "posts/video" %>
        </div>
    </div>
</div>
<div class="container">
    <p style="color: green"><%= notice %></p>
    <% content_for :name, "Posts" %>
    <div id="posts">
        <% if @posts.present? %>
            <div class="row">
                <% @posts.each do |post| %>
                    <%= render post %>
                <% end %>
            </div>
        <% else %>
            <p>Không tìm thấy sản phẩm nào.</p>
        <% end %>
    </div>
    <% if @pagy.pages > 1 %>
        <div class="d-flex justify-content-center">
            <%== pagy_bootstrap_nav(@pagy) %>
        </div>
    <% end %>
</div>

