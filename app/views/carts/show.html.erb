<h1>Giỏ hàng</h1>
<table>
    <thead>
        <tr>
            <th>Sản phẩm</th>
            <th>Số lượng</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
    <% @cart_items.each do |item| %>
        <tr>
            <td><%= item.post.name %></td>
            <td>
                <%= form_with(url: update_quantity_cart_path(item), method: :patch) do %>
                    <%= number_field_tag 'quantity', item.quantity, min: 1 %>
                    <%= submit_tag 'Cập nhật' %>
                <% end %>
            </td>
            <td>
                <%= button_to 'Xóa', remove_post_cart_path(item), method: :delete %>
            </td>
        </tr>
    <% end %>
    </tbody>
</table>
